<h2 class="page-header">Manage Posts <%= link_to 'Add New', new_admin_post_path, class: 'btn btn-success ' %></h2>
<% if @posts.exists? %>
    <table class="table table-striped">
      <tr>
        <th>Post Tiltle</th>
        <th>Post Category</th>
        <th>Created on</th>                        
        <th>Actions</th>
      </tr>
      <% @posts.each do |post| %>
      <tr>                        
        <td><%= post.title %></td>
        <td><%= post.category.name %></td>

        <td><%= post.created_at.to_time.strftime(' %B %e at %l:%M %p') %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-primary' %> | 
            <%= link_to 'Delete', admin_post_path(post), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
      
      <% end %>
      
    </table>

    <div align="center"> <%= will_paginate @posts %></div>
    <% else %>

    <p>There are no posts</p>
    <% end %>
