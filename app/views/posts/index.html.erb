<div id="posts-index">
    <% if @posts.exists? %>
        <% @posts.each_slice(2) do |post| %>
            <div class="row">
                <% post.each do |post| %>
                    <div class="col-md-6 col-sm-6">
                        <div class="post">
                            <%= image_tag post.image.url, width: "100%" %>
                                <div class="post-content">
                                    <h3><%= post.title %></h3>
                                    <small>Posted by: <%= post.user.name %> on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
                                    <%= raw post.body.truncate(190) %>
                                    <%= link_to  "Read More", post_path(post), class:'btn btn-primary' %>               
                                </div>                            
                        </div>
                    </div>
                <% end %>        
            </div>
        <% end %>

        <div align="center"> <%= will_paginate @posts %></div>

    <% else %>

    <p>There are no posts to display</p>

    <% end %> 

</div>
